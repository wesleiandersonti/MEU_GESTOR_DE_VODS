<Window x:Class="MeuGestorVODs.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="ðŸŽ¬ PLAYER - Meu Gestor de VODs" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        MinWidth="600" MinHeight="400">
    <Grid Background="#1a1a1a">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="10">
            <TextBlock x:Name="TitleTextBlock" 
                      Text="PLAYER" 
                      FontSize="16" 
                      FontWeight="Bold" 
                      Foreground="White"/>
        </Border>

        <!-- Video Player -->
        <Border Grid.Row="1" Background="#000000" Margin="0">
            <vlc:VideoView x:Name="VideoPlayer" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch"/>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="2" Background="#2d2d2d" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PlayPauseButton" 
                       Content="â¯ Play/Pause" 
                       Click="PlayPause_Click" 
                       Padding="15,8" 
                       Margin="0,0,10,0"
                       Background="#4CAF50"
                       Foreground="White"/>
                <Button Content="â¹ Parar" 
                       Click="Stop_Click" 
                       Padding="15,8" 
                       Margin="0,0,10,0"
                       Background="#F44336"
                       Foreground="White"/>
                <Slider x:Name="VolumeSlider" 
                       Width="100" 
                       Minimum="0" 
                       Maximum="100" 
                       Value="50"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
                <TextBlock Text="Volume" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Technical Info Panel -->
        <Border Grid.Row="3" Background="#f5f5f5" Padding="10" BorderBrush="#cccccc" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Labels -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="ðŸ“º Nome:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="ðŸŒ Servidor:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="âš¡ LatÃªncia:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="ðŸŽžï¸ Formato:" FontWeight="Bold" Margin="0,0,0,5"/>

                <!-- Values -->
                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="InfoName" Text="-" TextTrimming="CharacterEllipsis"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="InfoServer" Text="-" TextTrimming="CharacterEllipsis"/>
                <TextBlock Grid.Row="1" Grid.Column="2" x:Name="InfoLatency" Text="-"/>
                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="InfoFormat" Text="-"/>
            </Grid>
        </Border>
    </Grid>
</Window>
