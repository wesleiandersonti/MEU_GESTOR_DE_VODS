# SaaS Gestor - Environment Variables
# Copy this file to .env and update ALL values for production!

# ==========================================
# Database Configuration
# ==========================================
DB_ROOT_PASSWORD=change-me-root-password-secure
DB_APP_PASSWORD=change-me-app-password-secure
DB_REPLICA_PASSWORD=change-me-replica-password-secure
DB_NAME=saas_gestor
DB_USER=saas_app

# Master DB
DB_MASTER_HOST=mariadb-master
DB_MASTER_PORT=3306

# Slave DB
DB_SLAVE_HOST=mariadb-slave
DB_SLAVE_PORT=3306

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-me-redis-password-secure

# ==========================================
# JWT Configuration (min 32 characters)
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# Encryption Keys (exactly 32 characters)
# ==========================================
DB_ENCRYPTION_KEY=your-db-encryption-key-32char
ENV_ENCRYPTION_KEY=your-env-encryption-key-32ch

# ==========================================
# Application Settings
# ==========================================
NODE_ENV=production
PORT=3000
CORS_ORIGIN=http://localhost,http://localhost:80
API_URL=http://localhost:3000/api/v1

# ==========================================
# Frontend
# ==========================================
VITE_API_URL=http://localhost:3000/api/v1

# ==========================================
# Domain & SSL (optional)
# ==========================================
DOMAIN=localhost
EMAIL=admin@localhost

# ==========================================
# Docker Registry (optional)
# ==========================================
# DOCKER_REGISTRY=your-registry.com
# DOCKER_USERNAME=your-username
# DOCKER_PASSWORD=your-password
